<body>

<h1>Palavra do Dia</h1>

<div id="grid"></div>

<div>
    <input type="text" id="entrada" maxlength="5" autofocus>
    <button onclick="verificar()">Tentar</button>
</div>

<div id="mensagem"></div>

<script>
    const palavras = ["CASAL", "JOGOS", "TREVO", "MOUSE", "LINHA", "CARRO", "BOLA", "PRAIA", "NAVIO"];
    const data = new Date();
    const indiceDia = Math.floor(data.getTime() / (1000 * 60 * 60 * 24)) % palavras.length;
    const palavraDoDia = palavras[indiceDia];
    
    const tentativasMax = 6;
    let tentativaAtual = 0;
    let grid = document.getElementById("grid");

    for (let i = 0; i < tentativasMax * 5; i++) {
        let cell = document.createElement("div");
        cell.classList.add("cell");
        grid.appendChild(cell);
    }

    function verificar() {
        let entrada = document.getElementById("entrada");
        let palpite = entrada.value.toUpperCase();
        if (palpite.length !== 5) {
            alert("Digite uma palavra com 5 letras!");
            return;
        }

        let startIndex = tentativaAtual * 5;

        for (let i = 0; i < 5; i++) {
            let cell = grid.children[startIndex + i];
            cell.textContent = palpite[i];

            if (palpite[i] === palavraDoDia[i]) {
                cell.classList.add("correct");
            } else if (palavraDoDia.includes(palpite[i])) {
                cell.classList.add("present");
            } else {
                cell.classList.add("absent");
            }
        }

        tentativaAtual++;
        entrada.value = "";

        if (palpite === palavraDoDia) {
            document.getElementById("mensagem").textContent = "üéâ Voc√™ acertou!";
            document.getElementById("entrada").disabled = true;
        } else if (tentativaAtual >= tentativasMax) {
            document.getElementById("mensagem").textContent = `‚ùå Fim de jogo! A palavra era ${palavraDoDia}`;
            document.getElementById("entrada").disabled = true;
        }
    }
</script>

</body>
</html>
