        <div class="date" id="date"></div>
    </div>

    <script>
        const palavras = [
            { palavra: "Resili√™ncia", definicao: "Capacidade de se adaptar e se recuperar diante de dificuldades ou mudan√ßas." },
            { palavra: "Ef√™mero", definicao: "Que dura pouco tempo, passageiro, transit√≥rio." },
            { palavra: "Procrastinar", definicao: "Adiar ou deixar para depois uma tarefa ou obriga√ß√£o." },
            { palavra: "Altru√≠smo", definicao: "Atitude de ajudar os outros sem esperar nada em troca." },
            { palavra: "Perspicaz", definicao: "Capaz de perceber e compreender as coisas com clareza e rapidez." },
            { palavra: "In√≥cuo", definicao: "Que n√£o causa dano ou preju√≠zo, inofensivo." },
            { palavra: "√çmpar", definicao: "Singular, √∫nico, extraordin√°rio." }
        ];

        function getWordOfTheDay() {
            const today = new Date();
            const dayOfYear = Math.floor(
                (today - new Date(today.getFullYear(), 0, 0)) / 86400000
            );
            return palavras[dayOfYear % palavras.length];
        }

        function exibirPalavra() {
            const palavraDia = getWordOfTheDay();
            document.getElementById("word").textContent = palavraDia.palavra;
            document.getElementById("definition").textContent = palavraDia.definicao;

            const hoje = new Date().toLocaleDateString("pt-BR", {
                weekday: "long",
                day: "numeric",
                month: "long",
                year: "numeric"
            });
            document.getElementById("date").textContent = hoje;
        }

        exibirPalavra();
    </script>
