<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jogo da Palavra do Dia</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        h1 {
            color: #333;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(5, 60px);
            gap: 10px;
            margin-bottom: 20px;
        }

        .cell {
            width: 60px;
            height: 60px;
            border: 2px solid #ccc;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5em;
            font-weight: bold;
            background-color: white;
            text-transform: uppercase;
        }

        .cell.correct {
            background-color: #4caf50;
            color: white;
        }

        .cell.partial {
            background-color: orange;
            color: white;
        }

        .cell.wrong {
            background-color: #ccc;
            color: white;
        }

        input {
            padding: 10px;
            font-size: 1.2em;
            text-transform: uppercase;
            width: 200px;
            text-align: center;
        }

        button {
            padding: 10px 20px;
            font-size: 1.2em;
            margin-top: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <h1>Palavra do Dia</h1>
    <div class="grid" id="grid"></div>

    <input type="text" id="guess" maxlength="5" placeholder="Digite a palavra">
    <button onclick="checkGuess()">Tentar</button>

    <script>
        const palavras = [
            "CASAL", "TRENO", "FLORE", "NAVIO", "PEDRA", "LIVRO", "PRATO",
            "CARRO", "TERRA", "BOLSA", "PLANO", "RUGIR", "FESTA", "NORTE"
        ];

        // Função para obter a palavra do dia
        function getPalavraDoDia() {
            const hoje = new Date();
            const inicio = new Date(2025, 0, 1); // 1º Jan 2025
            const diffDias = Math.floor((hoje - inicio) / (1000 * 60 * 60 * 24));
            return palavras[diffDias % palavras.length];
        }

        let palavraDoDia = getPalavraDoDia();
        let tentativas = [];

        function atualizarGrid() {
            const grid = document.getElementById("grid");
            grid.innerHTML = "";
            tentativas.forEach(tentativa => {
                for (let i = 0; i < 5; i++) {
                    const cell = document.createElement("div");
                    cell.classList.add("cell");
                    const letra = tentativa[i];
                    cell.textContent = letra;

                    if (letra === palavraDoDia[i]) {
                        cell.classList.add("correct");
                    } else if (palavraDoDia.includes(letra)) {
                        cell.classList.add("partial");
                    } else {
                        cell.classList.add("wrong");
                    }
                    grid.appendChild(cell);
                }
            });
        }

        function checkGuess() {
            const guessInput = document.getElementById("guess");
            const guess = guessInput.value.toUpperCase();

            if (guess.length !== 5) {
                alert("A palavra deve ter 5 letras!");
                return;
            }

            tentativas.push(guess);
            atualizarGrid();

            if (guess === palavraDoDia) {
                setTimeout(() => alert("Parabéns! Você acertou a palavra do dia!"), 100);
            }

            guessInput.value = "";
        }
    </script>

</body>
</html>
